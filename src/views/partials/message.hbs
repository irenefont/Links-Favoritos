{{#if success}}
    <div class="container p-4">
        <div class="row">
            <div class="col md-4 mx-auto">
                <div class="alert alert-success alert-dismissible fade show" role="alert"> <!-- role es para el SEO -->
                    {{{success}}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>
{{/if}}

{{#if message}}
    <div class="container p-4">
        <div class="row">
            <div class="col md-4 mx-auto">
                <div class="alert alert-danger alert-dismissible fade show" role="alert"> <!-- role es para el SEO -->
                    {{{message}}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>
{{/if}}